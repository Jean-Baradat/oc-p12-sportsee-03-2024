{
	"semi": false,
	"singleQuote": false,
	"tabWidth": 2,
	"useTabs": true,
	"endOfLine": "lf",
	"arrowParens": "avoid",
	"printWidth": 80,
	"singleAttributePerLine": true,
	"bracketSameLine": false,
	"plugins": [
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.scss",
			"options": {
				"printWidth": 80
			}
		}
	]
}